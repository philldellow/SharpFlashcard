@using SharpFlashCard.Models
@model SharpFlashCard.Models.GameRules

@{
    ViewBag.Title = "Home Page";
}

<form>
    <div class="jumbotron">
        <h1>CardSharpers</h1>
        <p class="lead">Sharp.Flash.Cards - A Whole new way of learning</p>
        <p>To play a round please answer the question below</p>
        
        <!--p><a href="http://asp.net" class="btn btn-primary btn-lg">New Card &raquo;</a></p-->
    </div>
</form>

<div class="row">
    <div class="col-md-6">

        <h3>Question:</h3>
        <p>@Model.question</p><br>

        @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { }))
        {
            <h3>Answer:</h3>
            @Html.TextBox("Please Answer")<br>
            <br/><p><input type="submit" class="btn btn-primary btn-lg"></p><br />
        }
        @if (Model != null)
        {
            <p> Answer : <span id="Correct_Answer"> @Model.Response() </span></p>
        }
    </div>
</div>